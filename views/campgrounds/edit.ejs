<% layout('layouts/boilerplate') %> 
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form action="/campgrounds/<%= editCampground.id %>?_method=PUT" method="POST" novalidate enctype="multipart/form-data"
      class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="campground[title]" id="title" required
        value="<%= editCampground.title %>">
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" name="campground[location]" id="location" required
        value="<%= editCampground.location %>">
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" placeholder="0.00" required
            aria-label="price" aria-describedby="price-label" id="price"
            name="campground[price]" value="<%= editCampground.price %>">
            <div class="valid-feedback">
              Looks good!
            </div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" name="campground[description]" 
        id="description" required><%= editCampground.description %></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Add Images</label>
        <div class="input-group">
          <input type="file" name="image" class="form-control" id="image" multiple 
          aria-describedby="inputGroupFileAddon04" aria-label="Upload">
        </div>
      </div>

      <div class="mb-3">
        <% editCampground.images.forEach((image, i) => { %>
          <img src="<%= image.thumbnail %>" class="img-thumbnail" alt="">
          <div class="form-check-inline">
            <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= image.filename %>">
          </div>
          <label for="image-<%= i %>">Delete?</label>
          <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-warning">Update Campground</button>
      </div>
    </form>
    <a href="/campgrounds/<%= editCampground._id %>">Cancel</a>
  </div>
</div>


