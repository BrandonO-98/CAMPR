<% layout('layouts/boilerplate') %> 
<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/new">Create a new Campground</a>
</div>

  <% for( let campground of campgrounds ) { %>
    <div class="card mb-3">
      <!-- define a row for the columns to be placed in -->
      <div class="row">
        <div class="col-md-4">
          <% if (campground.images.length) { %>
            <img src="<%= campground.images[0].url %> " alt="" class="img-fluid">
          <% } else { %>
            <img src="https://res.cloudinary.com/da6su05rx/image/upload/v1657298929/CAMPR/s0zpc79ke4o05m7gfmml.jpg" alt="" class="img-fluid">
          <% } %>
    
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= campground.title %> </h5>
            <p class="card-text"><%= campground.description %></p>
            <p class="card-text">
              <p class="text-muted"><%= campground.location %></p>
              <a href="/campgrounds/<%= campground._id %> " 
                class="btn btn-primary">View <%= campground.title %> </a>
          </div>
        </div>
      </div>
    </div>
  <% } %>

